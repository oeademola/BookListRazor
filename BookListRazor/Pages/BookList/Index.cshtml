@page
@model BookListRazor.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br/>
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control">Create New Book</a>
    </div>
    <div class="col-3">
        <a asp-page="Upsert" class="btn btn-info form-control">Add(Upsert) New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.BookList.Count() > 0)
            {
                <table class="table table-striped table-hover border">
                    <thead>
                        <tr>
                            <th>
                                <label asp-for="BookList.FirstOrDefault().Name"></label>
                            </th>
                            <th>
                                <label asp-for="BookList.FirstOrDefault().Author"></label>
                            </th>
                            <th>
                                <label asp-for="BookList.FirstOrDefault().ISBN"></label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.BookList)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.Name)</td>
                                <td>@Html.DisplayFor(m => item.Author)</td>
                                <td>@Html.DisplayFor(m => item.ISBN)</td>
                                <td>
                                    <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                                    <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No books available</p>
            }
        </form>
    </div>

    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">
        <table id='DT_load' class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section scripts{ 

<script src="~/js/bookList.js"></script>

<script>

</script>
}
